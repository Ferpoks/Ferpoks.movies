def fmt_item_omdb(full: Dict[str, Any]) -> str:
    title = full.get("Title") or "â€”"
    year = full.get("Year") or "â€”"
    typ = (full.get("Type") or "").lower()
    plot = (full.get("Plot") or "").strip()
    if len(plot) > 240:
        plot = plot[:240] + "â€¦"
    return f"*{title}* ({year})\nØ§Ù„Ù†ÙˆØ¹: `{typ}`\n{plot}"

